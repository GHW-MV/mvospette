[Unit]
Description=Territory API (FastAPI/Uvicorn)
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/mvospette
EnvironmentFile=/etc/mvospette/secret.env
Environment=PYTHONPATH=/opt/mvospette
ExecStart=/root/.pyenv/versions/territory-env/bin/python -m uvicorn src.api:app --host 127.0.0.1 --port 8000
Restart=on-failure
RestartSec=3
User=root

[Install]
WantedBy=multi-user.target
